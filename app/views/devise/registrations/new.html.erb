<div class="centered be-procargaintense " style="width:100%; height:100%;"> 
  <br><br>
  <center>
    <div class="centered shadowtextcarga be-colortrans animated fadeIn " style="width:50%; height:60%;">
      <div  class="centered shadowtextcarga " style="width:90%; height:90%;">
        <h2><i class="fa fa-user-plus"></i> Nuevo usuario</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true,  :class => 'form-control' %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> caracteres minimo)</em>
          <%= f.password_field :password, autocomplete: "off",  :class => 'form-control' %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password_confirmation, "confirmar password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'  %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Registrarme", :class => 'button-proca'%>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
        <br>
      </div>
    </div>
    <ul></ul>
  </center>
</div>
